- question = answer.question
- title = h(question.title)
- owner = answer.user

%li.item
  / Answer Stats
  .stats
    .box.votes
      .counter{:class => class_for_number(answer.votes_average) }
        = format_number(answer.votes_average)
      .text
        = t(:votes, :scope => "activerecord.attributes.question")
  / Answer Summary
  .summary
    %h3
      = link_to title, question_answer_path(question, answer), :title => truncate(h(answer.body), :length => 200)
  .clear
