%h2
  = t('.forgot_your_password')

= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
  = devise_error_messages!
  %p
    = f.label :email
    %br
    = f.email_field :email
  %p
    = f.submit t('.submit')
%br
= render :partial => "shared/devise_links"